{
  "extends": "@dinwwwh/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client", "@types/node"]
  },
  "references": [{ "path": "./tsconfig.app.json" }], // Help you can use app source code
  "include": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/__tests__",
    "src/**/__mocks__",
    "src/**/__snapshots__",

    "playground",
    "scripts",
    "tests",

    "*" // ANY FILES IN ROOT DIRECTORY
  ]
}
