---
import 'styles/globals.css';

import Typewriter from 'components/typewriter.astro';
import DefaultLayout from '../layouts/default-layout.astro';

const teaches = [
  {
    href: 'https://www.typescriptlang.org/',
    title: 'Typescript',
  },
  {
    href: 'https://react.dev/',
    title: 'React',
  },
  {
    href: 'https://developers.cloudflare.com/workers/',
    title: 'Workers',
  },
];

const highlights = [
  {
    name: 'Work',
    items: [
      {
        href: 'https://github.com/dinwwwh/orpc',
        title: 'oRPC - OpenAPI + RPC + TypeScript + Best ever DX',
        status: 'Coming soon',
      },
      {
        href: 'https://ui.dinwwwh.com',
        title: 'DinUI - beautiful react components',
        status: 'Open for naughty',
      },
      {
        href: 'https://middleapi.com',
        title: ' MiddleAPI - supercharge your APIs',
        status: 'Coming soon',
      },
      {
        href: 'https://noteask.com',
        title: 'NoteAsk - your second brain',
        status: 'Coming soon',
      },
      {
        href: 'https://resolvex.ai',
        title: 'ResolveX - AI chatbot for your websites',
        status: 'Coming soon',
      },
    ],
  },
  {
    name: 'Posts',
    items: [
      {
        href: 'https://medium.com/@dinwwwh',
        title: 'Coming soon',
        status: 'Coming soon',
      },
    ],
  },
];

const links = [
  {
    name: 'Email',
    href: 'mailto:dinwwwh@gmail.com',
  },
  {
    name: 'Twitter',
    href: 'https://x.com/dinwwwh',
  },
  {
    name: 'Github',
    href: 'https://github.com/dinwwwh',
  },
];
---

<DefaultLayout>
  <div class="py-6">
    <header class="flex items-center gap-2">
      <img class="size-6 rounded-md" src="/d-avatar.png" alt="dinwwwh" />
      <span class="tracking-wide"> dinwwwh </span>
    </header>

    <div class="mt-8">
      <div>
        <h1 class="tracking-wide">
          dinwwwh &middot; <Typewriter
            id="the-meaning-of-dinwwwh"
            words={['Äá»‹nh LÃª', 'Do It Now, Win With Hustle.']}
          />
        </h1>
      </div>

      <p class="mt-1">
        Open-source maintainer & Indie hacker ðŸš€ focuses on
        {
          teaches.map((t, i) => (
            <a href={t.href} class="hover:text-gray-200 transition">
              {i === teaches.length - 1 ? 'and' : ''}
              {i === teaches.length - 1 ? `${t.title}.` : `${t.title},`}
            </a>
          ))
        }
      </p>
    </div>

    <div class="border-t border-gray-700 border-dashed my-12"></div>

    <div class="space-y-7">
      {
        highlights.map((highlight) => (
          <div>
            <h2
              id={highlight.name.toLowerCase()}
              class="scroll-m-20 text-gray-500"
            >
              <a href={`#${highlight.name.toLowerCase()}`}>{highlight.name}</a>
            </h2>

            <ul class="mt-1.5">
              {highlight.items.map((item) => (
                <li>
                  <a
                    class="group block -mx-3 p-3 pl-2.5 border-l-2 border-transparent hover:border-gray-500 hover:bg-gray-700/20 transition duration-300 ease-out"
                    href={item.href}
                  >
                    <div class="group-hover:text-gray-200 transition">
                      {item.title}
                    </div>
                    <div class="text-gray-500 mt-1 group-hover:text-gray-400/70 transition">
                      {item.status}
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div class="border-t border-gray-700 border-dashed my-12"></div>

    <div class="flex items-center gap-2 pb-8">
      {
        links.map((link, i) => (
          <div>
            <a href={link.href} class="hover:text-gray-200 transition">
              {link.name}
            </a>
            {i === links.length - 1 ? null : <span>&middot;</span>}
          </div>
        ))
      }
    </div>
  </div>
</DefaultLayout>
